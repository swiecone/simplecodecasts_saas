<div class="row">
	<div class="col-md-3">
	</div>

	<div class="col-md-6">
		<%= form_for @contact do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :email %>
			<%= f.email_field :email, class: "form-control" %>

			<%= f.label :comments %>
			<%= f.text_area :comments, class: "form-control" %>
		</div>
	</div>

	<div class="col-md-3">
	</div>

		<% end %>

</div>
